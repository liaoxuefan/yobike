/* pages/billing/index.wxss */
@import "../index/index.wxss";

.container{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}
.container view{
  z-index: 1;
}

.hide{
  display: none
}
.show{
  display: block
}

.bgImg{
  height : 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
}

.number,.endride{
  padding: 60rpx 0;
  flex: 2;
  width: 100%;
  text-align: center;
}

.time{
  text-align: center;
  width: 100%;
  flex: 6
}

.time-content{
  font-size: 100rpx;
}
.endride button{
  width: 90%;
  margin-top: 40rpx;
}

.startride{
  width: 100%;
  text-align: center;
  padding: 60rpx 0;
}
.startride button{
  width: 90%;
}