<!--pages/my/index.wxml-->
<view class="container">
  <view class="user-info">
    <block wx:if="{{userInfo.avatarUrl != ''}}">
      <image src="{{userInfo.avatarUrl}}"></image>
    </block>
    <text>{{userInfo.nickName}}</text>
  </view>
  <block wx:if="{{userInfo.avatarUrl != ''}}">
    <view class="mywallet tapbar">
      <text>我的钱包</text>
      <image src="/images/arrow_right.png" style="width: 45rpx;height: 45rpx" bindtap="movetoWallet"></image>
    </view>
  </block>
  <button bindtap="bindAction" class="btn-login" hover-class="gray" type="{{bType}}">{{actionText}}</button>
</view>